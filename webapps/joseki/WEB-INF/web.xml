<?xml version="1.0"?>
<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.2//EN" "http://java.sun.com/j2ee/dtds/web-app_2_2.dtd">
<web-app>

  <display-name>D2R Server</display-name>


  <!-- SERVLETS -->

  <!-- The Joseki SPARQL servlet -->
  <servlet>
    <servlet-name>SPARQL service processor</servlet-name>
    <servlet-class>org.joseki.http.Servlet</servlet-class>

    <!-- Configuration file -->
    <init-param>
      <param-name>org.joseki.rdfserver.config</param-name>
      <param-value>joseki-config.ttl</param-value>
    </init-param>

  </servlet>

  <servlet>
    <servlet-name>D2R Resource Forwarder</servlet-name>
    <servlet-class>de.fuberlin.wiwiss.d2rs.ResourceServlet</servlet-class>
  </servlet>
  
  <servlet>
    <servlet-name>D2R ClassMap Lister</servlet-name>
    <servlet-class>de.fuberlin.wiwiss.d2rs.ClassMapServlet</servlet-class>
  </servlet>
  
  <servlet>
    <servlet-name>D2R Resource Page</servlet-name>
    <servlet-class>de.fuberlin.wiwiss.d2rs.PageServlet</servlet-class>
    <init-param>
      <param-name>org.apache.velocity.properties</param-name>
      <param-value>/WEB-INF/velocity.properties</param-value>
    </init-param>
  </servlet>
  
  <servlet>
    <servlet-name>D2R Resource RDF Description</servlet-name>
    <servlet-class>de.fuberlin.wiwiss.d2rs.ResourceDescriptionServlet</servlet-class>
  </servlet>
  
  <servlet>
    <servlet-name>D2R ClassMap Directory Page</servlet-name>
    <servlet-class>de.fuberlin.wiwiss.d2rs.DirectoryServlet</servlet-class>
    <init-param>
      <param-name>org.apache.velocity.properties</param-name>
      <param-value>/WEB-INF/velocity.properties</param-value>
    </init-param>
  </servlet>
  
  <servlet>
    <servlet-name>D2R Root Page</servlet-name>
    <servlet-class>de.fuberlin.wiwiss.d2rs.RootServlet</servlet-class>
    <init-param>
      <param-name>org.apache.velocity.properties</param-name>
      <param-value>/WEB-INF/velocity.properties</param-value>
    </init-param>
  </servlet>

  <!-- MAPPINGS -->
  <!-- Map URLs to SPARQL service processors -->

  <servlet-mapping>
    <servlet-name>SPARQL service processor</servlet-name>
    <url-pattern>/sparql</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>D2R Resource Forwarder</servlet-name>
    <url-pattern>/resource/*</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
    <servlet-name>D2R ClassMap Lister</servlet-name>
    <url-pattern>/all/*</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
    <servlet-name>D2R ClassMap Lister</servlet-name>
    <url-pattern>/all</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
    <servlet-name>D2R Resource Page</servlet-name>
    <url-pattern>/page/*</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
    <servlet-name>D2R Resource RDF Description</servlet-name>
    <url-pattern>/data/*</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>D2R ClassMap Directory Page</servlet-name>
    <url-pattern>/directory/*</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
    <servlet-name>D2R Root Page</servlet-name>
    <url-pattern>/</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>default</servlet-name>
    <url-pattern>*.html</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
    <servlet-name>default</servlet-name>
    <url-pattern>*.css</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
    <servlet-name>default</servlet-name>
    <url-pattern>*.png</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
    <servlet-name>default</servlet-name>
    <url-pattern>*.js</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
    <servlet-name>default</servlet-name>
    <url-pattern>*.rdf</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
    <servlet-name>default</servlet-name>
    <url-pattern>/snorql/*</url-pattern>
  </servlet-mapping>
  
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>


  <!-- SECURIY -->

  <security-constraint>
    <web-resource-collection>
      <web-resource-name>Joseki</web-resource-name>
      <url-pattern>/*</url-pattern>
      <http-method>GET</http-method>
      <http-method>POST</http-method>
      <!-- <http-method>OPTIONS</http-method> -->
    </web-resource-collection>
  </security-constraint>

</web-app>
